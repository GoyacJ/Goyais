# Server
GOYAIS_HUB_PORT=8787
PORT=8787
GOYAIS_HUB_LOG_LEVEL=info
LOG_LEVEL=info

# Database
GOYAIS_DB_DRIVER=sqlite
GOYAIS_DB_PATH=./data/hub.db
# GOYAIS_DATABASE_URL=postgres://user:password@localhost:5432/goyais?sslmode=disable

# Auth
GOYAIS_AUTH_MODE=local_open
GOYAIS_BOOTSTRAP_EMAIL=admin@local
GOYAIS_BOOTSTRAP_PASSWORD=
GOYAIS_TOKEN_EXPIRY_HOURS=720

# Runtime integration
GOYAIS_RUNTIME_SHARED_SECRET=dev-shared
# GOYAIS_HUB_INTERNAL_SECRET=dev-shared

# Scheduling
GOYAIS_MAX_CONCURRENT_EXECUTIONS=5

# Optional
# GOYAIS_REPO_CACHE_DIR=/var/goyais/repo-cache
