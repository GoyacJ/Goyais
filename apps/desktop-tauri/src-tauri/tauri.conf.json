{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Goyais",
  "version": "0.2.0",
  "identifier": "com.goyais.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Goyais",
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "width": 1360,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
