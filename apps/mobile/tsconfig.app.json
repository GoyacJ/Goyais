{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals", "web-bluetooth"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../desktop/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "../desktop/src/**/*.ts",
    "../desktop/src/**/*.vue",
    "../desktop/src/**/*.d.ts"
  ]
}
