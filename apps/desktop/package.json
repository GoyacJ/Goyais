{
  "name": "@goyais/desktop",
  "private": true,
  "version": "0.4.0",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "dev": "vite",
    "dev:web": "vite",
    "sidecar:prepare": "bash ../../scripts/release/ensure-local-sidecars.sh",
    "dev:desktop": "GOYAIS_FORCE_SIDECAR_REBUILD=1 pnpm sidecar:prepare && tauri dev",
    "build": "vite build",
    "lint": "tsc --noEmit -p tsconfig.app.json",
    "test": "vitest run",
    "test:strict": "vitest run",
    "e2e:smoke": "playwright test --config=playwright.config.ts",
    "coverage": "vitest run --coverage --coverage.reporter=text --coverage.reporter=json-summary",
    "check:coverage": "node ../../scripts/desktop/check-coverage-thresholds.mjs",
    "coverage:gate": "pnpm run coverage && pnpm run check:coverage",
    "check:tokens": "node ../../scripts/desktop/check-token-drift.mjs",
    "check:size": "node ../../scripts/desktop/check-file-size.mjs",
    "check:complexity": "node ../../scripts/desktop/check-complexity.mjs",
    "quality:gate": "pnpm run check:size && pnpm run check:complexity",
    "tauri:dev": "pnpm dev:desktop"
  },
  "dependencies": {
    "@goyais/shared-core": "workspace:*",
    "@tauri-apps/api": "catalog:prod",
    "@tauri-apps/plugin-autostart": "catalog:prod",
    "@tauri-apps/plugin-dialog": "catalog:prod",
    "@tauri-apps/plugin-store": "catalog:prod",
    "@vueuse/core": "catalog:frontend",
    "lucide-vue-next": "catalog:frontend",
    "pinia": "catalog:frontend",
    "vue": "catalog:frontend",
    "vue-router": "catalog:frontend"
  },
  "devDependencies": {
    "@tauri-apps/cli": "catalog:inlined",
    "@playwright/test": "catalog:dev",
    "@types/web-bluetooth": "catalog:dev",
    "@vitejs/plugin-vue": "catalog:frontend",
    "@vitest/coverage-v8": "catalog:frontend",
    "@vue/test-utils": "catalog:frontend",
    "jsdom": "catalog:dev",
    "typescript": "catalog:dev",
    "unocss": "catalog:frontend",
    "vite": "catalog:frontend",
    "vitest": "catalog:frontend"
  }
}
